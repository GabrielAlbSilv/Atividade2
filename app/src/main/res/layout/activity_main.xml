<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/botao_edit"
            android:drawableRight="@drawable/ic_baseline_person"
            android:hint="@string/insira_o_usuario"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/botao_edit"
            android:drawableRight="@drawable/ic_baseline_lock"
            android:hint="@string/insira_a_senha"
            android:inputType="textPassword"
            android:maxLength="50"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnEntrar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#3F51B5"
            android:text="@string/entrar"
            android:textAllCaps="false" />

        <Button
            android:onClick="sairSistema"
            android:id="@+id/btnSair"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botao_redondo"
            android:text="@string/sair"
            android:textAllCaps="false"
            android:textColor="#FF0000" />


    </LinearLayout>


</LinearLayout>